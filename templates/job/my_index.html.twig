{% extends 'base.html.twig' %}

{% block title %}Mes offres{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Mes offres</h1>

        <a class="btn btn-primary" href="{{ path('app_job_new') }}">Créer</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date de création</th>
            <th>Publiée ?</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.title }}</td>
                <td>{{ job.createdAt|date('d/m/Y') }}</td>
                <td>{{ job.published ? 'Oui' : 'Non' }}</td>
                <td>
                    <a class="btn btn-link p-0" href="{{ path('app_job_edit', {'id': job.id}) }}">Modifier</a>
                    {{ include('job/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune offre d'emploi</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
